<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/analytics_chart_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/analytics_chart_background">


            <!-- Tab Layout for Navigation -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/analyticsTabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/analytics_chart_background"
                android:elevation="4dp"
                app:tabGravity="fill"
                app:tabIndicatorColor="@android:color/system_on_secondary_container_light"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@android:color/system_on_secondary_container_light"
                app:tabTextColor="@android:color/system_on_secondary_container_light">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overview" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Insights" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="History" />

            </com.google.android.material.tabs.TabLayout>

            <!-- Loading / Empty / Error States Container -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/analytics_chart_background">

                <!-- Progress Bar (Loading State) -->
                <ProgressBar
                    android:id="@+id/analyticsProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="100dp"
                    android:visibility="gone" />

                <!-- Empty State Text -->
                <TextView
                    android:id="@+id/emptyStateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="100dp"
                    android:gravity="center"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <!-- Charts Container (shown when data is available) -->
                <FrameLayout
                    android:id="@+id/chartsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                <!-- OVERVIEW CONTAINER                  -->
                    <androidx.core.widget.NestedScrollView
                        android:id="@+id/overviewContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fillViewport="true"
                        android:visibility="visible"
                        android:background="@color/analytics_chart_background">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Daily AI Schedule Recommendation -->
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="4dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="16dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="AI Daily Schedule"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:textColor="#1C1B1F"
                                        android:layout_marginBottom="8dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Personalized activity recommendations based on your productivity patterns. Tap blocks for details."
                                        android:textSize="14sp"
                                        android:textColor="#49454F"
                                        android:layout_marginBottom="16dp" />

                                    <HorizontalScrollView
                                        android:id="@+id/chartScrollView"
                                        android:layout_width="match_parent"
                                        android:layout_height="400dp"
                                        android:scrollbars="horizontal"
                                        android:fadeScrollbars="false">

                                        <ch.inf.usi.mindbricks.ui.charts.AIRecommendationCardView
                                            android:id="@+id/aiRecommendationView"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"/>
                                    </HorizontalScrollView>

                                    <LinearLayout
                                        android:id="@+id/legendContainer"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:padding="8dp"
                                        android:layout_marginTop="12dp"
                                        app:cardCornerRadius="16dp"/>

                                    <!-- Scroll hint -->
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="8dp"
                                        android:text="Swipe to explore full schedule"
                                        android:textSize="14dp"
                                        android:textColor="#9D83CE"
                                        android:textStyle="italic" />

                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="16dp"
                                android:orientation="horizontal"
                                android:thickness="1dp"/>

                            <!-- Goal Rings Card -->
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="4dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="16dp">

                                    <!-- Header with Title -->
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Daily Goals"
                                        android:textColor="?android:textColorPrimary"
                                        android:textSize="20sp"
                                        android:textStyle="bold"
                                        android:layout_marginBottom="12dp" />

                                    <!-- Today's Card -->
                                    <include
                                        android:id="@+id/todayRingCard"
                                        layout="@layout/item_daily_ring_card" />

                                    <!-- Divider -->
                                    <View
                                        android:id="@+id/historyDivider"
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="16dp"
                                        android:layout_marginBottom="12dp"
                                        android:background="@color/analytics_grid_line"
                                        android:visibility="gone" />

                                    <!-- Previous Days Header -->
                                    <LinearLayout
                                        android:id="@+id/historyHeader"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical"
                                        android:visibility="gone">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Previous Days"
                                            android:textColor="?android:textColorPrimary"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />

                                        <com.google.android.material.button.MaterialButton
                                            android:id="@+id/expandRingsButton"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Show"
                                            app:icon="@drawable/ic_expand_more"
                                            app:iconGravity="end"
                                            style="@style/Widget.Material3.Button.TextButton" />
                                    </LinearLayout>

                                    <!-- Horizontal RecyclerView for Previous Days -->
                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/dailyRingsRecyclerView"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:orientation="horizontal"
                                        android:clipToPadding="false"
                                        android:paddingStart="4dp"
                                        android:paddingEnd="4dp"
                                        android:paddingBottom="12dp"
                                        android:visibility="gone"
                                        android:scrollbars="horizontal"
                                        android:fadeScrollbars="false"
                                        android:scrollbarStyle="outsideOverlay"
                                        android:scrollbarThumbHorizontal="@drawable/scrollbar_thumb"
                                        android:scrollbarTrackHorizontal="@drawable/scrollbar_track"
                                        android:scrollbarSize="8dp"/>

                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

                            <!-- Streak Calendar Card -->
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="4dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="16dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="12dp"
                                        android:text="Study Streak Calendar"
                                        android:textColor="?android:textColorPrimary"
                                        android:textSize="20sp"
                                        android:textStyle="bold" />

                                    <ch.inf.usi.mindbricks.ui.charts.StreakCalendarView
                                        android:id="@+id/streakCalendarView"
                                        android:layout_width="match_parent"
                                        android:layout_height="400dp" />

                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>


                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="30dp"
                                android:orientation="horizontal"
                                android:thickness="0dp"/>

                        </LinearLayout>

                    </androidx.core.widget.NestedScrollView>

                    <!-- INSIGHTS CONTAINER-->
                    <androidx.core.widget.NestedScrollView
                        android:id="@+id/insightsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fillViewport="true"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Quality Heatmap Card -->
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="4dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="16dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="12dp"
                                        android:text="Quality Heatmap"
                                        android:textColor="?android:textColorPrimary"
                                        android:textSize="20sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="12dp"
                                        android:text="Study quality by hour and day"
                                        android:textColor="?android:textColorSecondary"
                                        android:textSize="14sp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <!-- Scrollable Heatmap -->
                                        <HorizontalScrollView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:scrollbars="horizontal"
                                            android:fadeScrollbars="false">

                                            <ch.inf.usi.mindbricks.ui.charts.QualityHeatmapChartView
                                                android:id="@+id/qualityHeatmapChart"
                                                android:layout_width="wrap_content"
                                                android:layout_height="460dp" />

                                        </HorizontalScrollView>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:gravity="center"
                                            android:padding="12dp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Quality: "
                                                android:textSize="13sp"
                                                android:layout_marginEnd="6dp"/>

                                            <!-- Show color gradient with single label -->
                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal"
                                                android:layout_marginEnd="4dp">

                                                <View android:layout_width="20dp" android:layout_height="20dp"
                                                    android:background="@color/analytics_grid_line_major"/>
                                                <View android:layout_width="20dp" android:layout_height="20dp"
                                                    android:background="@color/chart_scale_0"/>
                                                <View android:layout_width="20dp" android:layout_height="20dp"
                                                    android:background="@color/chart_scale_2"/>
                                                <View android:layout_width="20dp" android:layout_height="20dp"
                                                    android:background="@color/chart_scale_3"/>
                                                <View android:layout_width="20dp" android:layout_height="20dp"
                                                    android:background="@color/chart_scale_5"/>
                                                <View android:layout_width="20dp" android:layout_height="20dp"
                                                    android:background="@color/chart_scale_7"/>
                                            </LinearLayout>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="0% - 100%"
                                                android:textSize="12sp"/>

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

                            <!-- Hourly Distribution Card -->
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="4dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="16dp">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Hourly Distribution"
                                        android:textColor="?android:textColorPrimary"
                                        android:textSize="20sp"
                                        android:textStyle="bold" />

                                    <ch.inf.usi.mindbricks.ui.charts.HourlyDistributionChartView
                                        android:id="@+id/hourlyDistributionChart"
                                        android:layout_width="match_parent"
                                        android:layout_height="600dp" />

                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

                            <!-- Weekly Focus Chart Card -->
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="4dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="16dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Average Weekly Focus"
                                        android:textColor="?android:textColorPrimary"
                                        android:textSize="20sp"
                                        android:textStyle="bold" />

                                    <ch.inf.usi.mindbricks.ui.charts.WeeklyFocusChartView
                                        android:id="@+id/weeklyFocusChart"
                                        android:layout_width="match_parent"
                                        android:layout_height="320dp" />
                                    
                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="30dp"
                                android:orientation="horizontal"
                                android:thickness="0dp"/>

                        </LinearLayout>

                    </androidx.core.widget.NestedScrollView>

                    <!-- HISTORY CONTAINER -->
                    <!-- Session list with RecyclerView  -->
                    <androidx.core.widget.NestedScrollView
                        android:id="@+id/historyContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fillViewport="true"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Session History Header -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Session History"
                                    android:textColor="?android:textColorPrimary"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/sessionCountText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 sessions"
                                    android:textColor="?android:textColorSecondary"
                                    android:textSize="14sp" />

                            </LinearLayout>
                            <!-- Session History Card -->
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="4dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="16dp">

                                    <!-- Section Header -->
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="12dp"
                                        android:text="Recent Sessions"
                                        android:textColor="?android:textColorPrimary"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <!-- RecyclerView for History -->
                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/sessionHistoryRecycler"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:nestedScrollingEnabled="false" />

                                    <Button
                                        android:id="@+id/loadMoreButton"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Load More Sessions"
                                        android:visibility="gone" />

                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="40dp"
                                android:orientation="horizontal"
                                android:thickness="0dp"/>

                        </LinearLayout>

                    </androidx.core.widget.NestedScrollView>

                </FrameLayout>

            </FrameLayout>
            
        </LinearLayout>
        
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    
    <!-- Filter FAB -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/analyticsFilterFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:text="Last 30 Days"
        android:textColor="@android:color/white"
        android:contentDescription="Filter analytics"
        app:icon="@android:drawable/ic_menu_sort_by_size"
        app:iconTint="@android:color/white"
        app:backgroundTint="@color/chart_scale_4" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>