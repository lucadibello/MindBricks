<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"

    android:paddingStart="32dp"
    android:paddingEnd="32dp"
    android:paddingTop="32dp"
    android:paddingBottom="40dp">

    <!-- Main Title -->
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:text="Timer Settings"
    android:textSize="22sp"
    android:textStyle="bold"
    android:textColor="?android:attr/textColorPrimary"

    android:layout_marginBottom="32dp"/>

    <!-- Study Session Settings -->
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Study Duration"
    android:textSize="16sp"
    android:textColor="?android:attr/textColorSecondary"/>

    <TextView
    android:id="@+id/study_duration_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:text="25 min"
    android:textColor="?attr/colorPrimary"
    android:textSize="28sp"
    android:textStyle="bold"

    android:layout_marginTop="20dp"
    android:layout_marginBottom="4dp" />

    <com.google.android.material.slider.Slider
    android:id="@+id/study_duration_slider"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:valueFrom="15.0"
    android:valueTo="60.0"
    android:stepSize="5.0"
    android:value="25.0" />

    <!-- Divider -->
    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="?android:attr/listDivider"

    android:layout_marginTop="32dp"
    android:layout_marginBottom="32dp"/>

    <!-- Pause Session Settings -->
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Pause Duration"
    android:textSize="16sp"
    android:textColor="?android:attr/textColorSecondary"/>

    <TextView
    android:id="@+id/pause_duration_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:text="5 min"
    android:textColor="?attr/colorPrimary"
    android:textSize="28sp"
    android:textStyle="bold"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="4dp" />

    <com.google.android.material.slider.Slider
    android:id="@+id/pause_duration_slider"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:valueFrom="5.0"
    android:valueTo="30.0"
    android:stepSize="5.0"
    android:value="5.0" />

    </LinearLayout>
