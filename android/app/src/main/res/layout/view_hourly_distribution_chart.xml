<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Summary text -->
    <TextView
        android:id="@+id/hourlyDistributionSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your most productive hours"
        android:textSize="14sp"
        android:textColor="@color/analytics_text_secondary"
        android:layout_marginBottom="16dp" />

    <!-- Study Minutes Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Study Minutes by Hour"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/analytics_text_primary"
        android:layout_marginBottom="8dp" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/studyMinutesChart"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginBottom="24dp" />

    <!-- Focus Score Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Focus Score by Hour"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/analytics_text_primary"
        android:layout_marginBottom="8dp" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/focusChart"
        android:layout_width="match_parent"
        android:layout_height="220dp" />

</LinearLayout>