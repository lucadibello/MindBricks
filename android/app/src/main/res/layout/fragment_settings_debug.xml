<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?android:colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Warning Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#FFF3E0"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeColor="#FFB74D"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Debug Tools"
                        android:textColor="#E65100"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="For development and testing only"
                        android:textColor="#F57C00"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Basic Test Data Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Generate Test Data"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_generate_basic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate 50 Random Sessions"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_generate_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate 500 Sessions (Large Dataset)"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_generate_edge_cases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate Edge Cases (Boundaries)"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="8dp" />

        <!-- Environment Presets Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="Environment Presets"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Generate 5 sessions with specific environmental conditions"
            android:textColor="?android:textColorSecondary"
            android:textSize="12sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_generate_library"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quiet Library"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_generate_cafe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Busy Cafe"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_generate_dark_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dark Room"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_generate_outdoor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Outdoor Park"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_generate_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home Evening"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_generate_commute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Commute (Face Down)"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="8dp" />

        <!-- Database Tools Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="Database Tools"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_verify_database"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify Database (Check Logcat)"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_clear_database"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Clear All Data"
            android:textColor="#D32F2F"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="#D32F2F"
            app:cornerRadius="8dp" />

        <!-- Info Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#E3F2FD"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ℹ️ Generated Data Includes:"
                    android:textColor="#1565C0"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="• Study sessions with all 12 tag colors\n
                    • Sensor logs (noise, light, motion, orientation)\n
                    • Questionnaire responses (quick &amp; detailed)\n
                    • Realistic duration and focus score distributions"

                    android:textColor="#1976D2"
                    android:textSize="12sp"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>