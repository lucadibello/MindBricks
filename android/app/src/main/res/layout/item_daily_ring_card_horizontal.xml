<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/analytics_card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Date Header -->
        <TextView
            android:id="@+id/dateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dec 07"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/analytics_text_primary"
            android:gravity="center"
            android:layout_marginBottom="2dp" />

        <!-- Summary -->
        <TextView
            android:id="@+id/summaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="120 min"
            android:textSize="11sp"
            android:textColor="@color/analytics_text_secondary"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Compact Goal Rings View -->
        <ch.inf.usi.mindbricks.ui.charts.GoalRingsView
            android:id="@+id/goalRingsView"
            android:layout_width="match_parent"
            android:layout_height="120dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>